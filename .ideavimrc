let mapleader = " "
nmap <leader>q :q<cr>
nmap <leader>j :action RecentFiles<cr>
nmap <leader>f :action GotoFile<cr>
nmap <leader>t :action GotoSymbol<cr>
nmap <leader>s :action FileStructurePopup<cr>
